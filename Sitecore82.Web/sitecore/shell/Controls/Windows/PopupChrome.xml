<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <PopupChrome def:inherits="Sitecore.Shell.Controls.Windows.PopupChromeXmlControl,Sitecore.Client">           
    <Script Src="/sitecore/shell/controls/Windows.js"/>
    <GridPanel Width="$Width" Height="$Height" Background="white" Class="scMenu">
                        
        <Border Class="scGrayGradient" Align="right">
          <ImageButton Src="Images/close_red.png" Width="16" Height="16" Alt="Close" Click="javascript:scForm.browser.closePopups()"/>
        </Border>

      <Border Height="100%" GridPanel.Height="100%" GridPanel.VAlign="top">
            <def:Placeholder />
      </Border>
      
    </GridPanel>
  </PopupChrome>
</control>
