    <Border def:ID="Portlet">
      <DefaultPortletWindow def:ID="Window">
        <Border def:ID="Body" Padding="2px 0px 2px 0px" Visible="false">
          <GridPanel Width="100%" Columns="2">
          
            <ThemedImage Src="Applications/16x16/help2.png" Width="16" Height="16" Margin="0px 4px 0px 4px" GridPanel.VAlign="top"/>
            
            <Border Class="scFont" Foreground="white" GridPanel.Width="100%">
