<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <CommandsSimpleInfoPortlet def:inherits="Sitecore.Shell.Controls.CommandPortal.Portlets.CommandsSimpleInfo.CommandsSimpleInfoPortletXmlControl,Sitecore.Client" def:renderas="Literal">

    <Border def:ID="Portlet">
      <DefaultPortletWindow def:ID="Window">
        <Border def:ID="Body" Padding="2px 0px 2px 0px" Visible="false">
          <GridPanel Width="100%" Columns="2">
          
            <ThemedImage Src="Applications/16x16/information.png" Width="16" Height="16" Margin="0px 4px 0px 4px" GridPanel.VAlign="top"/>
            
            <Border Class="scClickFont" Foreground="white" GridPanel.Width="100%">
              <Literal def:ID="Text"/>
            </Border>
            
          </GridPanel>
        </Border>
        <Space Height="4"/>
      </DefaultPortletWindow>
    </Border>
    
  </CommandsSimpleInfoPortlet>
</control>
