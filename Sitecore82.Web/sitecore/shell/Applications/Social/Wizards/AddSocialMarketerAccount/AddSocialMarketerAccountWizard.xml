<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <AddSocialMarketerAccountWizard>
    <WizardForm CodeBeside="Sitecore.Social.Client.Wizards.AddSocialMarketerAccount.AddSocialMarketerAccountWizard,Sitecore.Social.Client">
      <WizardFormFirstPage ID="WelcomePage" Icon="PeopleV2/32x32/user.png">
        <WelcomeSocialMarketerAccountPageControl ID="WelcomeSocialMarketerAccountPageContent" />
      </WizardFormFirstPage>
      <WizardFormPage ID="SocialMarketerAccountNamePage" Header="Social Marketer Account" Text="Create a social marketer account that is responsible for approving and posting messages on social media." Icon="peoplev2/48x48/user.png">
        <WizardFormIndent>
          <SocialMarketerAccountNamePageControl ID="SocialMarketerAccountNamePageContent" />
        </WizardFormIndent>
      </WizardFormPage>
      <WizardFormPage ID="DefineWorkflowAndRolesPage" Header="Review" Text="Select the workflow that messages are placed in when they are sent to this account. Select the roles that the message reviewers must be members of." Icon="Applications/48x48/gears.png">
