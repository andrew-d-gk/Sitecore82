          <DefineWorkflowAndRolesPageControl ID="DefineWorkflowAndRolesPageContent" />
        </WizardFormIndent>
      </WizardFormPage>
      <WizardFormLastPage ID="GoodByePage" Icon="peoplev2/48x48/user.png">
        <GoodByeSocialMarketerAccountPageControl ID="GoodByeSocialMarketerAccountPageContent" />
      </WizardFormLastPage>
    </WizardForm>
  </AddSocialMarketerAccountWizard>
</control>