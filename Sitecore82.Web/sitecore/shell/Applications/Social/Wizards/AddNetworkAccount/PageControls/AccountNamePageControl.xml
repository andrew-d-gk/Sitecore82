<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <AccountNamePageControl def:inherits="Sitecore.Social.Client.Wizards.AddNetworkAccount.PageControls.AccountNamePageControl,Sitecore.Social.Client">
    <table width="100%">
      <tr valign="top">
        <td>
          <Literal Class="informationLabel" Text="Name:" />
        </td>
      </tr>
      <tr valign="top">
        <td>
          <Edit ID="AccountName" Style="margin-top : 2px;" Change="AccountNamePageControl:OnAccountNameChanged" Width="100%" />
        </td>
      </tr>
      <tr valign="top">
        <td>
          <br />
          <br />
          <Literal Class="informationLabel" Text="Description:" />
        </td>
      </tr>
      <tr valign="top">
        <td>
          <Edit ID="AccountDescription" Style="margin-top : 2px;" Width="100%" />
        </td>
      </tr>
      <tr valign="top">
        <td>
          <Literal Class="informationLabel" Text="Language:" />
        </td>
      </tr>
      <tr valign="top">
        <td>
          <Edit ID="MessageLanguage" Style="margin-top : 2px;" Width="100%" />
        </td>
      </tr>
    </table>
  </AccountNamePageControl>
</control>

