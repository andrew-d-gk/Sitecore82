<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <FacebookWaitForAuthPageControl def:inherits="Sitecore.Social.Facebook.Client.Wizards.AddNetworkAccount.PageControls.FacebookWaitForAuthPageControl,Sitecore.Social.Facebook.Client">
    <Border ID="WaitPane" Width="100%">
      <GridPanel Width="100%">
        <Space Height="64"/>
        <Border ID="WaitText" Align="center" GridPanel.Align="center" GridPanel.Style="font-weight:bold">
          <Literal Text="Authorization is in progress..." />
        </Border>
        <Space Height="16"/>
        <Border Align="center">
          <ThemedImage Src="Images/progress.gif" Width="94" Height="17"/>
        </Border>
      </GridPanel>
    </Border>
    <Border ID="ErrorPane" Align="center" Visible="false" Style="font-weight:bold;">
      <Literal ID="ErrorText" Text="Something" />
    </Border>
  </FacebookWaitForAuthPageControl>
</control>