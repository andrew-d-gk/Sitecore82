<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <Gallery.ItemChildren>
    <Stylesheet>
      #ChildrenContainer
      {
      overflow-x:hidden !important;
      background: #fafafa;
      }
    </Stylesheet>
    <Gallery>
      <CodeBeside Type="Sitecore.Shell.Applications.WebEdit.Galleries.ItemChildren,Sitecore.ExperienceEditor"/>
      <Scrollbox ID="ChildrenContainer" Class="scFixSize" Width="100%" Height="100%" Padding="0">
        <Menu ID="Children" Border="None"/>      
      <Border Style="white-space: nowrap; padding:4px; color:#080864; background-color:#fafafa" ID="NoChildrenTextContainer" Visible="false">
        <Literal Text="The item has no subitems." />
        <br/>
        <Literal Text="They may have been deleted." />
      </Border>
      </Scrollbox>      
    </Gallery>
    <Script Type="text/JavaScript" Language="javascript" Src="/sitecore/shell/Applications/WebEdit/Galleries/Item Children/Item Children.js"></Script>
  </Gallery.ItemChildren>
</control>
