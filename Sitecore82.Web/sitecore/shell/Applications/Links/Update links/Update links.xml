<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <UpdateLinks>
    <FormPage Background="threedface">
      <CodeBeside Type="Sitecore.Shell.Applications.Links.UpdateLinks.UpdateLinksForm,Sitecore.Client"/>

      <GridPanel Width="100%" Height="100%">
        <GridPanel Columns="2" Width="100%" GridPanel.Height="100%" GridPanel.Valign="top">
          
          <ThemedImage Src="Applications/32x32/Warning.png" Width="32" Height="32" Margin="8px 0px 8px 16px" GridPanel.Valign="top"/>
          
          <Border ID="Status" Padding="8px 16px 8px 8px" GridPanel.Width="100%">
            <Literal ID="Text"/>
          </Border>
          
        </GridPanel>

        <Border Align="Center" Padding="16px 8px 8px 8px">
          <Button ID="FixButton" Click="Fix" Header="Update" Margin="0px 4px 0px 0px"/>
          <Button ID="BreakButton" Click="Break" Header="Break" Margin="0px 4px 0px 0px"/>
          <Button ID="CancelButton" Click="Cancel" Header="Cancel" Margin="0px 4px 0px 0px"/>
        </Border>
      </GridPanel>
    
    </FormPage>
  </UpdateLinks>
</control>
