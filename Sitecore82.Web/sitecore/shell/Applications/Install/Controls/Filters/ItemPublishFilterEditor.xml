<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition">
  <Installer.ItemPublishFilterEditor def:inherits="Sitecore.Shell.Applications.Install.Controls.ItemPublishFilterEditor,Sitecore.Client">
    <GridPanel class="scFormTable" Columns="2">
      <Literal Text="Publish date: "/>
      <GridPanel Columns="2">
        <DatePicker def:ID="PublishDate" GridPanel.Width="100%" />
        <Button def:ID="ClearButton" Header="Clear Filter" Margin="0 0 0 10px" />
      </GridPanel>
      <Checkbox def:ID="CheckWorkflow" Header="Take workflow into account" Checked="true" />
    </GridPanel>

  </Installer.ItemPublishFilterEditor>
</control>