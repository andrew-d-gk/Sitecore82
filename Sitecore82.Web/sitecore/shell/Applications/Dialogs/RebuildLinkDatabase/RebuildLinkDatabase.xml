<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <RebuildLinkDatabase>
    <WizardForm CodeBeside="Sitecore.Shell.Applications.Dialogs.RebuildLinkDatabase.RebuildLinkDatabaseForm,Sitecore.Client">

      <WizardFormPage ID="Database" Header="Rebuild Link Databases">
        <WizardFormPadding>

          <Groupbox Header="Link databases">
            <Border ID="Databases"/>
          </Groupbox>

        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormProgressPage ID="Rebuilding" Header="Rebuild Link Databases" Text="Please wait while the link databases are being rebuilt." ActionText="Rebuilding...">
        <Border ID="Status">&#160;</Border>
      </WizardFormProgressPage>

      <WizardFormPage ID="Retry" Header="Rebuild Link Databases" Text="An error occurred while rebuilding the Link Databases.">
        <WizardFormPadding>
          <Memo ID="ErrorText" class="scStretch" ReadOnly="true" />
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage ID="LastPage" Header="Rebuild Link Databases">
        <WizardFormPadding>
          <div class="scStretch scFlexColumnContainerWithoutFlexie">
            <Literal class="sc-text-largevalue" Text="The rebuilding of the link databases has been completed."/>
            <Literal class="scFieldLabel" Text="Result:"/>
            <div class="scFlexContentWithoutFlexie scWizardLastPageResultText">
              <div class="scStretchAbsolute">
                <Memo ID="ResultText" class="scStretch" ReadOnly="true"/>
              </div>
            </div>
          </div>
        </WizardFormPadding>
      </WizardFormPage>

    </WizardForm>
  </RebuildLinkDatabase>
</control>
