      Text="Select the items that you wish to open. Then click the Open button." OKButton="Open">
      <Stylesheet>
        .scScrollbox table
        {
        height:100%;
        }

        .scScrollbox table select
        {
        height:100%;
        }
		.scContentControl 
		{
        height:100%;
        }
      </Stylesheet>

      <CodeBeside Type="Sitecore.Shell.Applications.Dialogs.SelectItems.SelectItemsForm,Sitecore.Client"/>

      <DataContext ID="DataContext" Root="/"/>

      <GridPanel Width="100%" Height="100%" Style="table-layout:fixed">
        <Scrollbox ID="Items" Height="100%" Class="scScrollbox scFixSize scFixSize4" Background="white" Border="1px inset" Padding="0px" GridPanel.Height="100%">

