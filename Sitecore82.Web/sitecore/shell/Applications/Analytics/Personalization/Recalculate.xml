<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <Recalculate>
    <FormDialog  Header="Recalculate" OKButton="Recalculate">
      <Stylesheet>
        .scConfirmationContainer td:first-child{
        width: 1px;
        }

        .scConfirmationContainer td:last-child{
        padding-left: 15px;
        }
      </Stylesheet>
      <CodeBeside Type="Sitecore.Shell.Applications.Analytics.Personalization.RecalculateForm,Sitecore.Marketing.Client"/>
      <GridPanel class="scConfirmationContainer" Columns="2" Width="100%" >
        <ThemedImage class="scConfirmationIcon" Src="Images/warning.png" />
        <Border class="scDialogMessage">
          <Literal class="scFieldLabel"  ID="Text" Text="The sum on the profile card percentages is not equal to 100%."/>
          <Literal Text="Change the profile card percentages or click Recalculate to change the values proportionally."/>
        </Border>
      </GridPanel>
    </FormDialog>
  </Recalculate>
</control>

