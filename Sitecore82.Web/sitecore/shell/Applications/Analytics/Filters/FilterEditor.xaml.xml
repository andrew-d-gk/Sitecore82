<?xml version="1.0" encoding="UTF-8" ?>
<xamlControls 
  xmlns:x="http://www.sitecore.net/xaml"
  xmlns:ajax="http://www.sitecore.net/ajax"
  xmlns:rest="http://www.sitecore.net/rest"
  xmlns:r="http://www.sitecore.net/renderings"
  xmlns:xmlcontrol="http://www.sitecore.net/xmlcontrols"
  xmlns:p="http://schemas.sitecore.net/Visual-Studio-Intellisense"
  xmlns:asp="http://www.sitecore.net/microsoft/webcontrols"
  xmlns:html="http://www.sitecore.net/microsoft/htmlcontrols"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <Sitecore.Shell.Applications.Analytics.Filters.FilterEditor x:inherits="Sitecore.Shell.Applications.Analytics.Filters.FilterEditorPage,Sitecore.Xdb.Client">
    
    <Sitecore.Controls.DialogPage runat="server" Icon="Business/32x32/Funnel.png" Header="Filters Editor" Text="Select your filters first, then specify the values in the description.">
      <AjaxScriptManager runat="server" />
      <ContinuationManager runat="server" />

      <GridPanel runat="server" Width="100%" Height="100%">
        <Border runat="server" Margin="0px 0px 4px 0px">
          <Literal runat="server" Text="1. Select the filters:" />
        </Border>

        <Scrollbox ID="Filters" runat="server" Height="100%" Width="100%" GridPanel.Height="50%"/>

        <Border runat="server" Margin="8px 0px 4px 0px">
          <Literal runat="server" Text="2. Filter description (click an underlined value to edit it):" />
        </Border>

        <Scrollbox ID="Description" runat="server" Height="100%" Width="100%" GridPanel.Height="50%"/>
        
      </GridPanel>

    </Sitecore.Controls.DialogPage>
    
  </Sitecore.Shell.Applications.Analytics.Filters.FilterEditor>
</xamlControls>
