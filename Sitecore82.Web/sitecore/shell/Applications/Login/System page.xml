<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <SystemPage>
    <FormPage>
    
      <Stylesheet Src="/sitecore/no.css"/>
      <Stylesheet Src="/sitecore/shell/Applications/Login/System page.css"/>
      
      <GridPanel Width="100%" Height="100%">
        <Border Class="scTop" Height="100%" GridPanel.Height="50%">
          <Space/>
        </Border>

        <Border Class="scBody" Align="center" Height="599" GridPanel.Height="599">
          <GridPanel Columns="5" Width="600" Height="599">
          
            <Space Height="32" GridPanel.ColSpan="5"/>
          
            <Space GridPanel.Height="100%"/>
            
            <Border GridPanel.VAlign="top" GridPanel.Width="48">
              <ThemedImage Src="$Icon" Width="48" Height="48" Align="absmiddle"/>
              <Border Class="scMirror" Width="100%"><ThemedImage Src="$Icon" Width="48" Height="48" Align="absmiddle"/></Border>
            </Border>
            
            <Space Width="16" GridPanel.Width="16"/>
          
            <GridPanel Width="100%" Height="100%" GridPanel.VAlign="top" GridPanel.Width="600">
            
              <Border Class="scHeadline">
                <Literal Text="$Headline"/>
              </Border> 
              
              <Border>
                <def:Placeholder Name="Help"/>
              </Border> 

              <Border Class="scTasks">
                <Literal Text="What do you want do do?"/>
              </Border>
              
              <def:Placeholder GridPanel.Height="100%"/>
              
              <Space Height="48"/>

            </GridPanel>

            <Space/>
          
          </GridPanel>
        </Border>
      
        <Border Class="scBottom" Height="100%" GridPanel.Height="50%">
          <Space/>
        </Border>
      </GridPanel>
    
    </FormPage>
  </SystemPage>
  
  <SystemOption>
    
    <Border RollOver="true" Class="scRollOver" Click="$Click" Margin="4px 0px 4px 0px" Background="transparent">
      <ThemedImage Src="Images/Go16x16.png" Width="16" Height="16" Margin="0px 6px 0px 6px" Align="absmiddle"/>
      <Literal Text="$Header"/>
      <def:Placeholder/>  
    </Border>
  </SystemOption>
  
</control>
