<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <DebuggerViewer>
    <FormPage Background="transparent">
      <CodeBeside Type="Sitecore.Shell.Applications.Debugger.DebuggerViewerForm,Sitecore.Client"/>

      <GridPanel Width="100%" Height="100%">
        <Commandbar ID="Commandbar">
          <Border Foreground="white">
            <Command Icon="Applications/24x24/refresh.png" Header="Refresh Report" Click="Refresh"/>
          </Border>
        </Commandbar>
        
        <Border Class="scLightBlueGradient" Height="100%" GridPanel.Height="100%" GridPanel.Width="100%">
          <Scrollbox ID="Report" Background="transparent" Border="none" Padding="0" Width="100%" Height="100%">
            <TaskWhatDoYouWantToDo ID="WhatToDo" Padding="8" Icon="Network/32x32/outbox.png" Header="You must start the Debugger to view debug information.">
              <TaskOption Header="Start the Debugger" Click="system:debug"/>
            </TaskWhatDoYouWantToDo>
          </Scrollbox>
        </Border>
        
      </GridPanel>

    </FormPage>
  </DebuggerViewer>
</control>
