<?xml version="1.0" encoding="utf-8" ?> 
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <ControlPanel>
    <FormPage Application="Control Panel">
      <CodeBeside Type="Sitecore.Shell.Applications.ControlPanel.ControlPanel.ControlPanelForm,Sitecore.Client"/>
      
      <div ID="ControlPanel" style="height: 100%; box-sizing: border-box;">
        <TaskBackground>
          <TaskTitle ID="Title"><Literal ID="TitleText"/></TaskTitle>

          <TaskOptions ID="OptionsSection">
            <Border ID="Options"/>
          </TaskOptions>
          
          <TaskLinks ID="LinksSection">
            <Border ID="Links"/>
          </TaskLinks>
          
        </TaskBackground>
      </div>
    
    </FormPage>
  </ControlPanel>
</control>

