@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model Sitecore.Mvc.Presentation.RenderingModel                  
@{
  var userControl = this.Html.Sitecore().Controls().GetUserControl(this.Model.Rendering);
  userControl.Requires.Script("business", "separator.js");
  var cssClass = "sc-separator";
  userControl.Class = cssClass;
  var htmlAttributes = userControl.HtmlAttributes;
}
<hr @htmlAttributes data-bind="visible: isVisible" />